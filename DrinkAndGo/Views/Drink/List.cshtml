@using DrinkAndGo.ViewModels
@model DrinkListViewModel

<h2>@Model.CurrentCategory</h2>
@{
    foreach(var drink in Model.Drinks)
    {
<div>
    <h4>Drink Name:@drink.Name</h4>
    <img src="@drink.ImageUrl" alt="Image url..." class="img-responsive img-thumbnail" style="max-height: 200px; max-width:200px;" />
    <p>Price: @drink.Price.ToString("c")</p>
    <p>---------------------------------------------------------------</p>
</div>
    }
}

